<Window
    x:Class="NotificationWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NotificationWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    Title="{Binding Title}"
    Width="200"
    Height="100"
    x:ClassModifier="internal"
    Background="{Binding Color}"
    ResizeMode="NoResize"
    Left="{Binding LocationLeft}"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <svgc:SvgViewbox
            Width="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="10"
            Source="{Binding IconSource,FallbackValue=Resources/Icons/SVG/success.svg}" />
        <TextBlock
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Text="{Binding Message,FallbackValue=Message}"
            TextWrapping="WrapWithOverflow" />
    </Grid>
</Window>
